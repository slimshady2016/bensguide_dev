<?xml version="1.0" encoding="utf-8"?>

<form>



	<field

		name="title"

		type="text"

		label="COM_AJAXQUIZ_CATEGORY_TITLE"

		description="COM_AJAXQUIZ_CATEGORY_TITLE_DESC"

		class="inputbox"

		size="40"

		required="true"/>
		
		
	<field name="timer" type="radio" default="1" label="COM_AJAXQUIZ_TIMER" description="COM_AJAXQUIZ_TIMER_DESC">

			<option value="0">TIMER_REMAIN</option>

			<option value="1">TIMER_START</option>

	</field>	



	<field

		name="duration"

		type="text"

		label="COM_AJAXQUIZ_DURATION"

		description="COM_AJAXQUIZ_DURATION_DESC"

		class="inputbox"

		size="40"

		default="00:00:00"/>

		

	<field

		name="attempt"

		type="text"

		label="COM_AJAXQUIZ_ATTEMPT"

		description="COM_AJAXQUIZ_ATTEMPT_DESC"

		class="inputbox"

		size="40"

		required="true"

		default="0"/>

		

	<field

		name="numques"

		type="text"

		label="COM_AJAXQUIZ_NUMQUES"

		description="COM_AJAXQUIZ_NUMQUES_DESC"

		class="inputbox"

		size="40"

		required="true"

		default="0"/>	

		

	<field

		name="userid"

		type="userlist"

		label="COM_AJAXQUIZ_USER_ID"

		description="COM_AJAXQUIZ_USER_DESC"

		class="inputbox" required="true"

		addfieldpath="/administrator/components/com_ajaxquiz/models/fields" />			

		

	<field

		name="published"

		type="list"

		class="inputbox"

		default="1"

		size="1"

		label="J_STATUS"

		description="JFIELD_PUBLISHED_DESC">

		<option

			value="1">

			JPUBLISHED</option>

		<option

			value="0">

			JUNPUBLISHED</option>

	</field>

	

	<field name="id" type="text" default="0"

			readonly="true" class="readonly"

			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />	

		

</form>

