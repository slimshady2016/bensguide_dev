		type="text"
		label="COM_AJAXQUIZ_TEMPLATE_TITLE"
		description="COM_AJAXQUIZ_TEMPLATE_TITLE_DESC"
		class="inputbox"
		size="40"
		required="true"/>
		
	<field
		name="assignuser"
		type="assignuser"
		label="COM_AJAXQUIZ_TEMPLATE_USER_ID"
		description="COM_AJAXQUIZ_TEMPLATE_USER_DESC"
		class="inputbox" required="true"
		addfieldpath="/administrator/components/com_ajaxquiz/models/fields" />			
		
	<field
		name="description"
		type="editor"
		label="JGLOBAL_DESCRIPTION"
		description="COM_AJAXQUIZ_DESCRIPTION_DESC"
