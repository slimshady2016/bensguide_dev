<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_REDJ_FILTER"
			hint="JSEARCH_FILTER_LABEL"
		/>
		<field
			name="state"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			statuses="*,0,1,2,-2"
			description="JOPTION_SELECT_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.ordering ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="a.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="a.published ASC">JSTATUS_ASC</option>
			<option value="a.published DESC">JSTATUS_DESC</option>
			<option value="a.id ASC">COM_REDJ_HEADING_REDIRECTS_ID_ASC</option>
			<option value="a.id DESC">COM_REDJ_HEADING_REDIRECTS_ID_DESC</option>
			<option value="a.fromurl ASC">COM_REDJ_HEADING_REDIRECTS_FROMURL_ASC</option>
			<option value="a.fromurl DESC">COM_REDJ_HEADING_REDIRECTS_FROMURL_DESC</option>
			<option value="a.tourl ASC">COM_REDJ_HEADING_REDIRECTS_TOURL_ASC</option>
			<option value="a.tourl DESC">COM_REDJ_HEADING_REDIRECTS_TOURL_DESC</option>
			<option value="a.skip ASC">COM_REDJ_HEADING_REDIRECTS_SKIP_ASC</option>
			<option value="a.skip DESC">COM_REDJ_HEADING_REDIRECTS_SKIP_DESC</option>
			<option value="a.redirect ASC">COM_REDJ_HEADING_REDIRECTS_REDIRECT_ASC</option>
			<option value="a.redirect DESC">COM_REDJ_HEADING_REDIRECTS_REDIRECT_DESC</option>
			<option value="a.case_sensitive ASC">COM_REDJ_HEADING_REDIRECTS_CASE_SENSITIVE_ASC</option>
			<option value="a.case_sensitive DESC">COM_REDJ_HEADING_REDIRECTS_CASE_SENSITIVE_DESC</option>
			<option value="a.request_only ASC">COM_REDJ_HEADING_REDIRECTS_REQUEST_ONLY_ASC</option>
			<option value="a.request_only DESC">COM_REDJ_HEADING_REDIRECTS_REQUEST_ONLY_DESC</option>
			<option value="a.decode_url ASC">COM_REDJ_HEADING_REDIRECTS_DECODE_URL_ASC</option>
			<option value="a.decode_url DESC">COM_REDJ_HEADING_REDIRECTS_DECODE_URL_DESC</option>
			<option value="a.comment ASC">COM_REDJ_HEADING_REDIRECTS_COMMENT_ASC</option>
			<option value="a.comment DESC">COM_REDJ_HEADING_REDIRECTS_COMMENT_DESC</option>
			<option value="a.hits ASC">COM_REDJ_HEADING_REDIRECTS_HITS_ASC</option>
			<option value="a.hits DESC">COM_REDJ_HEADING_REDIRECTS_HITS_DESC</option>
			<option value="a.last_visit ASC">COM_REDJ_HEADING_REDIRECTS_LAST_VISIT_ASC</option>
			<option value="a.last_visit DESC">COM_REDJ_HEADING_REDIRECTS_LAST_VISIT_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_REDJ_LIST_LIMIT"
			description="COM_REDJ_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
