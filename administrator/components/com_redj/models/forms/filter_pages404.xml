<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_REDJ_FILTER"
			hint="JSEARCH_FILTER_LABEL"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="p.id ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="p.id ASC">COM_REDJ_HEADING_PAGES404_ID_ASC</option>
			<option value="p.id DESC">COM_REDJ_HEADING_PAGES404_ID_DESC</option>
			<option value="p.title ASC">COM_REDJ_HEADING_PAGES404_TITLE_ASC</option>
			<option value="p.title DESC">COM_REDJ_HEADING_PAGES404_TITLE_DESC</option>
			<option value="p.language ASC">COM_REDJ_HEADING_PAGES404_LANGUAGE_ASC</option>
			<option value="p.language DESC">COM_REDJ_HEADING_PAGES404_LANGUAGE_DESC</option>
			<option value="p.hits ASC">COM_REDJ_HEADING_PAGES404_HITS_ASC</option>
			<option value="p.hits DESC">COM_REDJ_HEADING_PAGES404_HITS_DESC</option>
			<option value="p.last_visit ASC">COM_REDJ_HEADING_PAGES404_LAST_VISIT_ASC</option>
			<option value="p.last_visit DESC">COM_REDJ_HEADING_PAGES404_LAST_VISIT_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_REDJ_LIST_LIMIT"
			description="COM_REDJ_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
