<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="search" method="upgrade">
	<name>plg_search_yeeditor_content</name>
	<author>YEEDEEN</author>
	<creationDate>MAR 20 2014</creationDate>
	<copyright>Copyright (C) 2013</copyright>
	<license>GNU General Public License version 2 or later; see http://yeedeen.com/license</license>
	<authorEmail>N/A</authorEmail>
	<authorUrl>http://yeeditor.com</authorUrl>
	<version>2.01</version>
	<description>PLG_SEARCH_YEEDITOR_CONTENT_XML_DESCRIPTION</description>
	<files>
		<filename plugin="yeeditor_content">yeeditor_content.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_search_yeeditor_content.ini</language>
		<language tag="en-GB">en-GB.plg_search_yeeditor_content.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="PLG_SEARCH_YEEDITOR_CONTENT_FIELD_SEARCHLIMIT_DESC"
					label="PLG_SEARCH_YEEDITOR_CONTENT_FIELD_SEARCHLIMIT_LABEL"
					size="5"
				/>

				<field name="search_content" type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					description="PLG_SEARCH_YEEDITOR_CONTENT_FIELD_CONTENT_DESC"
					label="PLG_SEARCH_YEEDITOR_CONTENT_FIELD_CONTENT_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>

				<field name="search_archived" type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					description="PLG_SEARCH_YEEDITOR_CONTENT_FIELD_ARCHIVED_DESC"
					label="PLG_SEARCH_YEEDITOR_CONTENT_FIELD_ARCHIVED_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
