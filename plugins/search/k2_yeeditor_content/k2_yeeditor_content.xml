    <author>YEEDEEN</author>
	<creationDate>MAR 20 2014</creationDate>
	<copyright>Copyright (C) 2013</copyright>
	<license>GNU General Public License version 2 or later; see http://yeedeen.com/license</license>
	<authorEmail>N/A</authorEmail>
	<authorUrl>http://yeeditor.com</authorUrl>
	<version>2.01</version>
    <description>K2_YEEDITOR_CONTENT_THIS_PLUGIN_EXTENDS_THE_DEFAULT_JOOMLA_SEARCH_FUNCTIONALITY_TO_K2_YEEDITOR_CONTENT_CONTENT</description>
    <files>
        <filename plugin="k2_yeeditor_content">k2_yeeditor_content.php</filename>
    </files>
	<languages>
		<language tag="en-GB">en-GB.plg_search_k2_yeeditor_content.ini</language>
		<language tag="en-GB">en-GB.plg_search_k2_yeeditor_content.sys.ini</language>
	</languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit" type="text" size="5" default="50" label="K2_YEEDITOR_CONTENT_SEARCH_LIMIT" description="K2_YEEDITOR_CONTENT_THE_NUMBER_OF_ITEMS_TO_RETURN_WHEN_PERFORMING_A_SEARCH"/>
                <field name="search_tags" type="radio" default="0" label="K2_YEEDITOR_CONTENT_ENABLE_SEARCHING_IN_TAGS" description="K2_YEEDITOR_CONTENT_SELECT_IF_YOU_WANT_TO_SEARCH_ITEMS_TAGS_NOTE_THAT_THIS_CAN_BE_VERY_SLOW_ON_LARGE_SITES">
                    <option value="0">K2_YEEDITOR_CONTENT_NO</option>
                    <option value="1">K2_YEEDITOR_CONTENT_YES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
